@if(Model.updatedAccounts.Count > 0){

    <p>Las siguientes cuentas de crédito fueron actualizadas exitosamente en <b>VTEX</b></p>

    <table>
        <thead>
            <tr>
               <th>Documento</th>
                <th>Tienda</th>
                <th>Vtex Id</th>
                <th>Cupo Máximo</th>
                <th>Cupo Actual</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in @Model.updatedAccounts)
            {
                 <tr>
                    <td>@account.document</td>
                    <td>@account.business</td>
