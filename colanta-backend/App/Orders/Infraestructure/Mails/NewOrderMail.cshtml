@{
    @model colanta_backend.App.Orders.Infraestructure.NewOrderMailModel
}
<!DOCTYPE html
    PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:o="urn:schemas-microsoft-com:office:office"
    xmlns:v="urn:schemas-microsoft-com:vml"
    style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; box-sizing: border-box; width: 100%; height: 100%; margin: 0; padding: 0; background: #f1f1f1 !important;">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pide Colanta</title>
    <!--[if gte mso 9]>
  <xml>
    <o:OfficeDocumentSettings>
    <o:AllowPNG/>
    <o:PixelsPerInch>96</o:PixelsPerInch>
    </o:OfficeDocumentSettings>
  </xml>
  <![endif]-->
    <style>
        a[x-apple-data-detectors] {
            color: inherit !important;
            text-decoration: none !important;
            font-size: inherit !important;
            font-family: inherit !important;
            font-weight: inherit !important;
            line-height: inherit !important;
        }
    </style>
    <style>
        @@media (max-width: 600px) {

            img {
                max-width: 100% !important;
                height: auto !important;
            }
        }
    </style>
    <style>
        @@media screen and (min-width: 30em) {

            .w-70-ns {
                width: 70% !important;
            }

            .ph4-ns {
                padding-left: 2rem !important;
                padding-right: 2rem !important;
            }

            .mv1-ns {
                margin-top: .25rem !important;
                margin-bottom: .25rem !important;
            }

            .mv4-ns {
                margin-top: 2rem !important;
                margin-bottom: 2rem !important;
            }
        }
    </style>
</head>
<body
    style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; box-sizing: border-box; width: 100%; height: 100%; margin: 0; padding: 0; background: #f1f1f1 !important; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;">
    <table width="100%" border="0" cellpadding="0" cellspacing="0"
        style="box-sizing: border-box; margin: 0; padding: 0; background: #f1f1f1; border-collapse: collapse; border-spacing: 0; mso-table-lspace: 0pt; mso-table-rspace: 0pt; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; width: 100%; height: 100%; line-height: 100% !important;">
        <tr style="box-sizing: border-box !important;">
            <td align="left" valign="top"
                style="font-size: 14px; line-height: 20px; box-sizing: border-box; border-collapse: collapse; text-align: left !important; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;">
                <table class="mv4-ns" width="100%" align="center" border="0" cellpadding="0" cellspacing="0"
                    style="box-sizing: border-box; max-width: 40rem; width: 100%; background-color: #fff; border-collapse: collapse; border-spacing: 0; mso-table-lspace: 0pt; mso-table-rspace: 0pt !important; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;"
                    bgcolor="#fff">

                    <tr style="box-sizing: border-box !important;">
                        <td class="ph4-ns"
                            style="font-size: 14px; background-color:#74BB1F; line-height: 20px; box-sizing: border-box; border-collapse: collapse; border-bottom-style: solid; border-bottom-width: 1px; border-color: #eee; width: 100%; padding-bottom: 2rem; text-align: center !important; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;"
                            align="center">
                            <div
                                style="box-sizing: border-box; width: 100%; margin-bottom: 1rem; margin-top: 2rem; margin-right: auto; margin-left: auto !important;">
                                <a href="http://colanta.myvtex.com"
                                    style="box-sizing: border-box !important;">
                                    <img alt="" border="0" width="auto"
                                        src="https://colanta.myvtex.com/arquivos/logo-pide-colanta-blanco.svg"
                                        style="vertical-align: top; outline: none; text-decoration: none; -ms-interpolation-mode: bicubic; max-width: 100%; width: 50%; border: none; max-height: 180px!important;">
                                    </img></a>
                                <h2
                                    style="margin: 0; font-size: 35px; line-height:35px; box-sizing: border-box !important;color:#fff;">
                                    ¡Hola @Model.storeName!</h2>
                            </div>
                        </td>
                    </tr>

                    <tr style="box-sizing: border-box !important;">
                        <td class="ph4-ns"
                            style="font-size: 14px; line-height: 20px; box-sizing: border-box; border-collapse: collapse; border-bottom-style: solid; border-bottom-width: 1px; border-color: #eee; width: 100%; padding-bottom: 2rem; text-align: center !important; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;"
                            align="center">
                            <div
                                style="box-sizing: border-box; width: 8rem; margin-bottom: 1rem; margin-top: 2rem; margin-right: auto; margin-left: auto !important;">
                                <a href="http://colanta.myvtex.com"
                                    style="box-sizing: border-box !important;">
                                    <img alt="" border="0" width="auto"
                                        src="https://colanta.vteximg.com.br/arquivos/logo-pide-colanta-blanco.svg"
                                        style="vertical-align: top; outline: none; text-decoration: none; -ms-interpolation-mode: bicubic; max-width: 100%; border: none; max-height: 80px !important;">
                                    </img></a>
                            </div>
                            <h1
                                style="margin: 0; font-size: 25px; line-height: 58px; box-sizing: border-box !important;">
                                Tienes un nuevo pedido.</h1>

                            <div style="box-sizing: border-box; color: #777; margin-top: .5rem !important;">
                                Tienes un nuevo pedido de Pidecolanta.com. Por favor revisa este detalle para procesarlo.
                            </div>
                        </td>
                    </tr>


                    <tr style="box-sizing: border-box !important;">
                        <td class="ph4-ns" style="font-size: 14px; line-height: 20px; box-sizing: border-box; border-collapse: collapse; text-align: center; padding-top: .5rem; padding-bottom: .5rem; vertical-align: top; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; width: 100%;"
                            align="left">

                            <p>
                                <strong>El número del pedido es: </strong> <span
                                    style="color: #00b7ff;"><strong>#@Model.vtexOrderId</strong></span>
                            </p>
                            <p>
                                <strong>Siesa pedido: </strong> <span
                                    style="color: #00b7ff;"><strong>@Model.siesaPedido</strong></span>
                            </p>
                        </td>
                    </tr>
                    <tr style="box-sizing: border-box !important;">
                        <td class="ph4-ns" style="font-size: 14px; line-height: 20px; box-sizing: border-box; border-collapse: collapse; text-align: center; padding-top: .5rem; padding-bottom: .5rem; vertical-align: top; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; width: 100%;"
                            align="left">
                            <h2>Formas de pago</h2>
                            <table style="margin: 0 auto">
                                <tbody >
                                    @foreach(var wayToPay in Model.wayToPays)
                                    {
                                        <tr>
                                            @if(wayToPay.wayToPay == "CUPO")
                                            {
                                                <td><b>CUPO LÁCTEO:</b></td>
                                            }
                                            else
                                            {
                                                <td><b>@wayToPay.wayToPay:</b></td>
                                            }
                                            <td>@string.Format("{0:C}", wayToPay.value)</td>
                                            <td>@wayToPay.payRef</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr style="box-sizing: border-box !important;">
                        <td class="ph4-ns" style="font-size: 14px; line-height: 20px; box-sizing: border-box; border-collapse: collapse; text-align: center; padding-top: .5rem; padding-bottom: .5rem; vertical-align: top; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; width: 100%;"
                            align="left">
                            <h2>Entrega</h2>
                            <table style="margin: 0 auto">
                                <tbody >
                                    <tr>
                                        <td><b>Tipo de entrega:</b></td>
                                        <td>
                                            @if (Model.pickupInStore)
                                            {
                                                <span>Recogida</span>
                                            }
                                            else
                                            {
                                                <span>Domicilio</span>       
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><b>Hora del pedido:</b></td>
                                        <td>@Model.orderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                    @if (Model.pickupInStore)
                                    {
                                        <tr>
                                            <td><b>Horario de recogida:</b></td>
                                            <td>Desde @Model.pickupStart?.ToString("dd/MM/yyyy HH:mm") hasta @Model.pickupEnd?.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td><b>Observaciones:</b></td>
                                        <td>@Model.observations</td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr style="box-sizing: border-box !important;">
                        <td colspan="4"
                            style="font-size: 14px; line-height: 20px; box-sizing: border-box; border-collapse: collapse; text-align: center; padding-top: .5rem; padding-bottom: .5rem; vertical-align: top; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; width: 100%;"
                            align="left">


                            <img alt=""
                                src="https://colanta.vtexassets.com/assets/vtex.file-manager-graphql/images/932c9308-4fd4-41cc-bf7c-f285d84740f9___a226ea0d4ea02d17c78afd94cf05c9ac.svg"
                                style="-ms-interpolation-mode: bicubic; max-width: 100%!important; width: 30%;max-height: 180px; " />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>

</html>